#!/bin/bash

DIR="$(dirname "$0")"
. "${DIR}/config"

set -o errexit
set -o pipefail

REPO_OWNER=$1
REPO_NAME=${2:-cloudbuild-demo}

if [[ -z "$REPO_OWNER" ]]; then
  echo "Usage $0 <your-github-username>"
  exit 1
fi

# get the key path 
export KEY_NAME=$(gcloud kms keys describe --keyring $KMS_RING_NAME \
  --location $REGION $KMS_KEY_NAME --format=json \
  | jq --raw-output '.name')

export NOTE_LOCATION=$(curl -s "https://containeranalysis.googleapis.com/v1/projects/${PROJECT_ID}/notes/${VULN_ATTESTOR_ID}-note" \
  --request "GET" \
  --header "Content-Type: application/json" \
  --header "Authorization: Bearer $(gcloud auth print-access-token)" \
  --header "X-Goog-User-Project: ${PROJECT_ID}" \
  | jq --raw-output '.name')


gcloud beta builds worker-pools create demo-pool \
  --region $REGION \
  --project $PROJECT_ID \
  --worker-machine-type e2-standard-2 \
  --worker-disk-size 100GB


gcloud beta builds triggers create github \
  --name demo-trigger \
  --region $REGION \
  --project $PROJECT_ID \
  --repo-name $REPO_NAME \
  --repo-owner $REPO_OWNER \
  --tag-pattern "v*" \
  --substitutions "_KMS_DIGEST_ALG=SHA512,_KMS_KEY_NAME=${KEY_NAME}/cryptoKeyVersions/1,_NOTE_NAME=${NOTE_LOCATION}" \
  --build-config "app/cloudbuild.yaml"
